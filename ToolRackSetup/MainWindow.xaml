<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolRackSetup"
        xmlns:Collections="clr-namespace:System.Collections;assembly=System.Collections.NonGeneric" x:Name="mainWindow" x:Class="ToolRackSetup.MainWindow"
        mc:Ignorable="d"
        Title="ATC Tools" Height="606" Width="971" Closing="window_Closing">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="15,0,0,17">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="211*"/>
            <ColumnDefinition Width="209"/>
            <ColumnDefinition Width="134*"/>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="Auto" MinWidth="83"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="lstviewTools" Margin="0,10,10,120" SelectionChanged="ListView_SelectionChanged" SelectedIndex="1" SelectionMode="Single" Grid.ColumnSpan="7" FontSize="16" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}">

            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn x:Name="gvcPocket" Header="Pocket" Width="50" DisplayMemberBinding="{Binding Pocket, StringFormat=\{0:D\}}"/>
                    <GridViewColumn Header="Tool" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <local:ClickSelectTextBox x:Name="txtBoxToolNumber" Background="Transparent" BorderThickness="1" Text="{Binding ToolNumber, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" KeyUp="txtBoxToolNumber_KeyUp" GotFocus="txtBoxToolNumber_GotFocus" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Description" Width="200" DisplayMemberBinding="{Binding ToolInfo.Description, TargetNullValue=' '}"/>
                    <GridViewColumn Header="Height" Width="75"  DisplayMemberBinding="{Binding ToolInfo.HeightOffset}"/>
                    <GridViewColumn Header="X" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <local:ClickSelectTextBox x:Name="txtBoxX" Background="Transparent" BorderThickness="1" Text="{Binding X, Mode=TwoWay, StringFormat=\{00:000.0000\}}" KeyUp="txtBoxToolNumber_KeyUp" GotFocus="txtBoxToolNumber_GotFocus" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Y" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <local:ClickSelectTextBox x:Name="txtBoxY" Background="Transparent" BorderThickness="1" Text="{Binding Y, Mode=TwoWay, StringFormat=\{00:000.0000\}}" KeyUp="txtBoxToolNumber_KeyUp" GotFocus="txtBoxToolNumber_GotFocus" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Z" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <local:ClickSelectTextBox x:Name="txtBoxZ" Background="Transparent" BorderThickness="1" Text="{Binding Z, Mode=TwoWay, StringFormat=\{00:000.0000\}}" KeyUp="txtBoxToolNumber_KeyUp" GotFocus="txtBoxToolNumber_GotFocus" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Slide Distance" Width="105">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <local:ClickSelectTextBox x:Name="txtBoxSlideDistance" Background="Transparent" BorderThickness="1" 
                                         Text="{Binding SlideDistance, Mode=TwoWay, StringFormat=\{0:F4\}}" KeyUp="txtBoxToolNumber_KeyUp" GotFocus="txtBoxToolNumber_GotFocus" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Slide Axis" Width="105">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>

                                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Grid.ColumnSpan="2" SelectedIndex="{Binding SlideAxis, Mode=TwoWay}">
                                    <ComboBoxItem Content="X">
                                    </ComboBoxItem>
                                    <ComboBoxItem Content="Y"/>
                                </ComboBox>



                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>



        </ListView>
        <Label Content="Z Bump:" HorizontalAlignment="Center" Margin="0,490,0,0" Width="90" Grid.Column="1" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxZBump" HorizontalAlignment="Left" Margin="0,0,0,61" TextWrapping="Wrap" Text="{Binding ZBump, StringFormat=\{0:F3\}, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120" Grid.Column="2" RenderTransformOrigin="1.017,3.28" Height="18" VerticalAlignment="Bottom">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="txtBoxWaitTime" HorizontalAlignment="Left" Margin="85,0,0,4" TextWrapping="Wrap" Text="{Binding SpindleWaitTime, StringFormat=\{0:F2\}}" Width="120" Grid.Column="2" Height="18" VerticalAlignment="Bottom" />
        <Label Content="Wait Time For Spindle to Stop:" HorizontalAlignment="Left" Margin="10,547,0,0" Width="170"  Grid.Column="1" Height="26" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="btnWriteChanges" Grid.Column="6" Content="Write Changes" HorizontalAlignment="Left" Margin="3,0,0,4" Width="95" IsEnabled="{Binding dirty}" Click="btnWriteChanges_Click" Height="31" VerticalAlignment="Bottom"/>
        <Button x:Name="btnAddPocket" Content="Add Pocket" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="0,0,0,87" Width="150" Height="20" VerticalAlignment="Bottom" Click="btnAddPocket_Click"/>
        <Button x:Name="btnRemoveLastPocket" Content="Remove Last Pocket" Grid.ColumnSpan="2" Margin="70,0,0,87" Grid.Column="2" Click="btnRemoveLastPocket_Click" HorizontalAlignment="Left" Width="150" Height="20" VerticalAlignment="Bottom"/>
        <Label Grid.Column="3" Content="Assign Machine Coordinates:" HorizontalAlignment="Left" Margin="40,466,0,0" VerticalAlignment="Top" Height="26" Width="167"/>
        <Button x:Name="btnAssignMachineCoordX" Grid.Column="4" Content="X" HorizontalAlignment="Left" Margin="0,469,0,0" VerticalAlignment="Top" Height="20" Width="35" Click="btnAssignMachineCoordX_Click"/>
        <Button x:Name="btnAssignMachineCoordY" Grid.Column="4" Content="Y" HorizontalAlignment="Center" Margin="0,469,0,0" VerticalAlignment="Top" Height="20" Width="34" Click="btnAssignMachineCoordY_Click"/>
        <Button x:Name="btnAssignMachineCoordZ" Grid.Column="4" Content="Z" HorizontalAlignment="Left" Margin="98,469,0,0" VerticalAlignment="Top" Height="20" Width="35" Click="btnAssignMachineCoordZ_Click"/>
        <CheckBox x:Name="chkbxTestingMode" Grid.Column="3" Content="Testing Mode" HorizontalAlignment="Left" Margin="13,504,0,0" VerticalAlignment="Top" IsChecked="{Binding EnableTestingMode}" />
        <Label Content="Testing Feed:" HorizontalAlignment="Left" Margin="13,520,0,0" Width="80" Grid.Column="3" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxTestingFeed" HorizontalAlignment="Left" Margin="93,524,0,0" TextWrapping="Wrap" Text="{Binding TestingFeed, StringFormat=\{0:F3\}, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="60" Grid.Column="3" RenderTransformOrigin="1.017,3.28" Height="18" VerticalAlignment="Top"/>
        <Label Content="Slide Distance:" Margin="5,520,5,27" Width="90" Grid.Column="1" Height="26"/>
        <TextBox x:Name="txtBxSlideDistance" HorizontalAlignment="Left" Margin="0,0,0,35" TextWrapping="Wrap" Text="{Binding ZBump, StringFormat=\{0:F3\}, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120" Grid.Column="2" RenderTransformOrigin="1.017,3.28" Height="18" VerticalAlignment="Bottom">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>
